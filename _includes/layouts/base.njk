<html>
  <head>
    <title>Eleventy + Netlify CMS from scratch</title>
    <!-- capture the CSS content as a Nunjucks variable -->
    {% set css %}
      {% include "styles/css/style.css" %}
    {% endset %}
    <!-- feed it through our cssmin filter to minify -->
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>

  <body>
    <h1>
      Eleventy + Netlify CMS from scratch
    </h1>
    {{ content | safe }}
  </body>

</html>
